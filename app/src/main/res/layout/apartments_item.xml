<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@color/green_500"
    android:orientation="vertical">

    <TextView
        android:id="@+id/apartmentNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phòng E302"
        android:textColor="@color/beige_700"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inforApartment"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:text="Thông tin căn hộ"
            android:textColor="@color/beige_500"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="264dp"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diện tích căn hộ (m^2) : "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="170dp"
                    android:text="100"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforFloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tầng: "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/floor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="43dp"
                    android:text="100"
                    android:textSize="16sp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="264dp"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforNumberBedrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số phòng ngủ trong căn hộ : "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/numberBedrooms"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="203dp"
                    android:text="2"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforNumberBathrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số phòng WC trong căn hộ : "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/numberBathrooms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="203dp"
                    android:text="1"
                    android:textSize="16sp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền thuê : "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="101dp"
                    android:text="1500000"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforPriceGarbage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền rác : "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceGarbage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="101dp"
                    android:text="50000"
                    android:textSize="16sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <TextView
                    android:id="@+id/inforPriceInternet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá Internet : "
                    android:textColor="@color/beige_500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceInternet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="101dp"
                    android:text="3000"
                    android:textSize="16sp" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:text="Thông tin Dịch vụ"
            android:textColor="@color/beige_500"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/gymService"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/green_900">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textGymService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="Dịch vụ tập Gym"
                            android:textColor="@color/beige_500"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/rounded_background">

                            <TextView
                                android:id="@+id/textActivityGymService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Đang sử dụng"
                                android:textColor="@color/beige_500" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/laundryService"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@color/green_900">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textLaundryService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="Dịch vụ giặt ủi"
                            android:textColor="@color/beige_500"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/rounded_background">

                            <TextView
                                android:id="@+id/textActivityLaundryService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Đang sử dụng"
                                android:textColor="@color/beige_500" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/parkingService"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@color/green_900">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textParkingService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="Dịch vụ giữ xe"
                            android:textColor="@color/beige_500"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/rounded_background">

                            <TextView
                                android:id="@+id/textActivityParkingService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Đang sử dụng"
                                android:textColor="@color/beige_500" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/swimmingService"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@color/green_900">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textSwimmingService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="Dịch vụ hồ bơi"
                            android:textColor="@color/beige_500"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/rounded_background">

                            <TextView
                                android:id="@+id/textActivitySwimmingService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Đang sử dụng"
                                android:textColor="@color/beige_500" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Thông tin người thuê" />

</LinearLayout>